# EON Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Keys - Google Gemini
# ============================================================================
# You can add up to 25 API keys for parallel processing
# Each key has a 500 request/day limit
GOOGLE_API_KEY_1=your_google_api_key_1_here
GOOGLE_API_KEY_2=your_google_api_key_2_here
GOOGLE_API_KEY_3=your_google_api_key_3_here
GOOGLE_API_KEY_4=your_google_api_key_4_here
GOOGLE_API_KEY_5=your_google_api_key_5_here
# Add more keys as needed...
# GOOGLE_API_KEY_6=
# GOOGLE_API_KEY_7=
# ...
# GOOGLE_API_KEY_25=

# ============================================================================
# Paths
# ============================================================================
EON_DATA_DIR=./data
EON_CACHE_DIR=./cache
EON_LOG_DIR=./logs

# ============================================================================
# Processing Settings
# ============================================================================
# Number of parallel workers (typically one per API key)
EON_NUM_WORKERS=25

# Number of historical filings to process per company
EON_NUM_FILINGS_PER_COMPANY=30

# Maximum API requests per day per key
EON_MAX_REQUESTS_PER_DAY=500

# Seconds to sleep after each API request (rate limiting)
EON_SLEEP_AFTER_REQUEST=65

# ============================================================================
# AI Settings
# ============================================================================
# Default LLM model to use
EON_DEFAULT_MODEL=gemini-2.5-flash

# Thinking budget for AI models
EON_THINKING_BUDGET=4096

# Use Pydantic structured output (recommended)
EON_USE_STRUCTURED_OUTPUT=true

# ============================================================================
# Storage Settings
# ============================================================================
# Storage backend: json, parquet, sqlite, or postgres
# Parquet recommended for 1,000+ companies (10-100x compression)
EON_STORAGE_BACKEND=parquet

# ============================================================================
# SEC Edgar Settings
# ============================================================================
# Your company/script name for SEC compliance
EON_SEC_COMPANY_NAME=Research Script

# Your email for SEC compliance (required by SEC)
EON_SEC_USER_EMAIL=your.email@example.com

# ============================================================================
# SEC EDGAR Rate Limiting
# ============================================================================
# Delay between SEC API requests (seconds)
# SEC recommends max 10 requests/second. For batch processing, use longer delays.
# Min: 0.5 (aggressive) | Recommended: 2.0 | Max: 10.0 (very conservative)
EON_SEC_REQUEST_DELAY=2.0

# Maximum concurrent SEC requests
# Limits parallel downloads to avoid overwhelming SEC servers.
# Min: 1 (sequential) | Recommended: 5 | Max: 10 (aggressive)
EON_SEC_MAX_CONCURRENT=5

# Stagger delay between batch worker starts (seconds)
# Prevents thundering herd when multiple workers start batch processing.
# With 25 workers and 30s stagger, the last worker starts after ~12 minutes.
# Min: 0 (no stagger) | Recommended: 30 | Max: 120 (very conservative)
EON_SEC_WORKER_STAGGER_DELAY=30

# ============================================================================
# Selenium Settings (for HTML to PDF conversion)
# ============================================================================
# Path to Chrome WebDriver (leave empty for automatic download)
EON_CHROME_DRIVER_PATH=

# Run browser in headless mode (recommended)
EON_HEADLESS_BROWSER=true

# ============================================================================
# Feature Flags
# ============================================================================
# Enable caching of API responses
EON_ENABLE_CACHING=true

# Enable progress tracking and resumption
EON_ENABLE_PROGRESS_TRACKING=true

EON_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_TOKEN

# Send Discord progress notifications every N% of batch completion.
# Set to 0 to disable progress notifications (only completion/failure).
# Default: 10 (notify at 10%, 20%, 30%, etc.)
EON_DISCORD_PROGRESS_INTERVAL=10
